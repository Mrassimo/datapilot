#!/usr/bin/env bash

# DataPilot Short Command Launcher
# Usage: ./datapilot [command] [args...]
# Makes running DataPilot as simple as: ./datapilot ui

# Get the directory where this script is located
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Check if we have the bundled version
if [ -f "$DIR/dist/datapilot.js" ]; then
    # Use the bundled version (fastest)
    exec node "$DIR/dist/datapilot.js" "$@"
elif [ -f "$DIR/bin/datapilot.js" ]; then
    # Fall back to unbundled version
    exec node "$DIR/bin/datapilot.js" "$@"
else
    echo "Error: DataPilot not found. Please run 'npm run build' first."
    exit 1
fi