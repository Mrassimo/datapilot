{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/parsers/**/*",
    "src/analyzers/overview/**/*",
    "src/analyzers/quality/**/*",
    "src/analyzers/eda/**/*",
    "src/analyzers/streaming/**/*",
    "src/analyzers/statistical-tests/**/*",
    "src/analyzers/modeling/**/*",
    "src/analyzers/visualization/**/*",
    "src/analyzers/engineering/**/*",
    "src/analyzers/multivariate/**/*",
    "src/cli/**/*",
    "src/core/**/*",
    "src/utils/**/*",
    "src/security/**/*",
    "src/monitoring/**/*",
    "src/performance/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/performance/format-optimizers/**/*",
    "src/performance/monitoring/**/*",
    "src/performance/workers/**/*",
    "src/performance/benchmarking/**/*"
  ]
}