# Windows-optimized npm configuration
# Fixes common Windows npm install issues including hanging and timeouts

# Registry and timeout settings
registry=https://registry.npmjs.org/
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=3

# Reduce network-related hanging issues
prefer-offline=true
prefer-dedupe=true

# Skip audit for faster installs (can be run separately)
audit=false

# Windows-specific settings
script-shell=""
ignore-scripts=false

# Cache settings - use system temp for Windows compatibility
# cache=${TEMP}/npm-cache (Windows will use default location)

# Progress and logging
progress=true
loglevel=warn

# Package resolution
package-lock=true
save-exact=false

# Security and integrity
fund=false

# Performance optimizations
maxsockets=15